{
	"extends": "airbnb-base",
	"plugins": ["compat"],
	"rules": {
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"no-plusplus": "off",
		"import/no-extraneous-dependencies": ["error", {
			"devDependencies": [
				"**/*.test.js",
				"**/*.browsertest.js",
				"build/**",
				"tests/**"
			],
			"packageDir": "./"
		}]
	},
	"globals": {
		"document": true,
		"window": true,
		"describe": true,
		"expect": true,
		"test": true,
		"beforeAll": true,
		"afterAll": true
	},
	"overrides": [
		{
			"files": ["scripts/**"],
			"excludedFiles": "*.browsertest.js",
			"rules": {
				"compat/compat": "error"
			}
		}
	]
}
