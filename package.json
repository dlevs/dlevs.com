{
  "name": "dlevs.com",
  "version": "1.0.0",
  "description": "Source code for https://dlevs.com/",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:watch": "nodemon --ignore scripts/ --ignore public-dist/ index.js",
    "dev": "npm run build:styles -- --w & npm run build:scripts -- -wd & npm run start:watch",
    "build": "npm run build:scripts && npm run build:styles && npm run build:images && npm run build:manifest",
    "build:scripts": "webpack -p --config build/processScripts.webkit.config.js",
    "build:styles": "postcss styles/main.css -o public-dist/styles/main.css",
    "build:images": "node build/processImages.js && node build/processSvgs.js",
    "build:manifest": "hashlink -s --relative public-dist 'public-dist/**/*.+(js|css)' > data/generated/assets.json",
    "clean": "rimraf ./public-dist && rimraf ./data/generated/*",
    "test": "jest",
    "test:browser": "jest -i --testRegex=.*browsertest.js"
  },
  "author": "Daniel Levett <dlevett@hotmail.co.uk>",
  "dependencies": {
    "@dlevs/photoswipe": "^4.1.3",
    "child-process-promise": "^2.2.1",
    "feather-icons": "^3.2.2",
    "fs-extra": "^4.0.1",
    "hammerjs": "^2.0.8",
    "instantclick": "^3.1.0",
    "koa": "^2.3.0",
    "koa-router": "^7.2.1",
    "koa-slash": "^0.2.0",
    "koa-static": "^4.0.1",
    "koa-views": "^6.1.0",
    "lazysizes": "^4.0.0-rc3",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "node-fetch": "^1.7.3",
    "normalize.css": "^7.0.0",
    "pug": "^2.0.0-rc.3"
  },
  "devDependencies": {
    "async": "^2.5.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "cssnano": "^3.10.0",
    "exif-reader": "^1.0.2",
    "glob": "^7.1.2",
    "hashlink": "0.0.1",
    "html-validator": "^2.2.3",
    "jest": "^21.2.1",
    "nodemon": "^1.11.0",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "precss": "^2.0.0",
    "progress": "^2.0.0",
    "puppeteer": "^0.11.0",
    "rimraf": "^2.6.1",
    "sharp": "^0.18.2",
    "svgo": "^0.7.2",
    "webpack": "^3.6.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  }
}
