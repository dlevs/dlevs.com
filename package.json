{
	"name": "dlevs.com",
	"version": "1.0.0",
	"description": "Source code for https://dlevs.com/",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"start:watch": "nodemon --ignore scripts/ --ignore public/ index.js",
		"dev": "npm run build:copypublic && npm run build:styles -- --w & npm run build:scripts -- -w & npm run start:watch",
		"build": "npm run build:copypublic && npm run build:scripts && npm run build:styles && npm run build:media && npm run build:manifest",
		"build:copypublic": "cp -r publicSrc/copy/* public",
		"build:scripts": "webpack --config build/processScripts.webpack.config.js",
		"build:styles": "postcss --verbose -d public/styles styles/*.css",
		"build:media": "node build/processImages.js && node build/processVideos.js && node build/processSvgs.js",
		"build:manifest": "hashlink -s --relative public 'public/**/*.+(js|css|png|ico|jpg|svg|json|webp|mp4)' > data/generated/assets.json",
		"clean": "rimraf ./public/* && rimraf ./data/generated/*",
		"test": "jest",
		"test:browser": "jest -i --testRegex=.*browsertest.js",
		"lint": "npm run lint:scripts && npm run lint:styles && npm run lint:views",
		"lint:scripts": "eslint .",
		"lint:styles": "stylelint 'styles/**/*.css'",
		"lint:views": "pug-lint views",
		"precommit": "lint-staged"
	},
	"engines": {
		"node": "^8.9.4"
	},
	"author": "Daniel Levett <dlevett@hotmail.co.uk>",
	"dependencies": {
		"@dlevs/photoswipe": "^4.1.4",
		"child-process-promise": "^2.2.1",
		"classnames": "^2.2.5",
		"feather-icons": "^4.6.0",
		"fluent-ffmpeg": "^2.1.2",
		"fs-extra": "^5.0.0",
		"glob": "^7.1.2",
		"koa": "^2.5.0",
		"koa-bodyparser": "^4.2.0",
		"koa-helmet": "^3.3.0",
		"koa-json": "^2.0.2",
		"koa-router": "^7.4.0",
		"koa-slash": "^0.2.0",
		"koa-static": "^4.0.2",
		"koa-views": "^6.1.4",
		"lazysizes": "^4.0.1",
		"lodash": "^4.17.5",
		"moment": "^2.20.1",
		"node-fetch": "^2.0.0",
		"normalize.css": "^8.0.0",
		"pug": "^2.0.0-rc.4",
		"query-string": "^5.1.0"
	},
	"devDependencies": {
		"async": "^2.6.0",
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.3",
		"babel-preset-env": "^1.6.1",
		"babel-preset-stage-3": "^6.24.1",
		"bluebird": "^3.5.1",
		"chalk": "^2.4.1",
		"cssnano": "^3.10.0",
		"eslint": "^4.18.1",
		"eslint-config-airbnb-base": "^12.1.0",
		"eslint-plugin-compat": "^2.2.0",
		"eslint-plugin-import": "^2.9.0",
		"exif-reader": "^1.0.2",
		"fetch-cookie": "^0.7.0",
		"hashlink": "0.0.1",
		"html-validator": "^2.2.3",
		"husky": "^0.14.3",
		"jest": "^22.4.2",
		"jest-image-snapshot": "^2.3.0",
		"lint-staged": "^7.0.0",
		"nodemon": "^1.17.1",
		"postcss-cli": "^5.0.0",
		"postcss-cssnext": "^3.1.0",
		"precss": "^2.0.0",
		"progress": "^2.0.0",
		"pug-lint": "^2.5.0",
		"pug-lint-config-clock": "^2.0.0",
		"puppeteer": "^0.13.0",
		"rimraf": "^2.6.2",
		"sharp": "^0.19.1",
		"stylelint": "^9.1.1",
		"stylelint-config-standard": "^18.1.0",
		"stylelint-order": "^0.8.1",
		"svgo": "^1.0.5",
		"tough-cookie": "^2.3.4",
		"webpack": "^4.0.1",
		"webpack-cli": "^2.0.9"
	},
	"jest": {
		"testEnvironment": "node",
		"verbose": true
	}
}
