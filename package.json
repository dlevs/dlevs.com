{
  "name": "dlevs.com",
  "version": "1.0.0",
  "description": "Source code for https://dlevs.com/",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:watch": "nodemon --ignore scripts/ --ignore publicDist/ index.js",
    "dev": "npm run build:styles -- --w & npm run build:scripts -- -w & npm run start:watch",
    "build": "npm run build:scripts && npm run build:styles && npm run build:images && npm run build:manifest",
    "build:scripts": "webpack --config build/processScripts.webpack.config.js",
    "build:styles": "postcss styles/*.css -d publicDist/styles",
    "build:images": "node build/processImages.js && node build/processSvgs.js",
    "build:manifest": "hashlink -s --relative publicDist 'publicDist/**/*.+(js|css)' > data/generated/assets.json",
    "clean": "rimraf ./publicDist && rimraf ./data/generated/*",
    "test": "jest",
    "test:browser": "jest -i --testRegex=.*browsertest.js",
    "lint": "npm run lint:scripts && npm run lint:styles && npm run lint:views",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint 'styles/**/*.css'",
    "lint:views": "pug-lint views",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": "^8.9.1"
  },
  "author": "Daniel Levett <dlevett@hotmail.co.uk>",
  "dependencies": {
    "@dlevs/photoswipe": "^4.1.4",
    "child-process-promise": "^2.2.1",
    "classnames": "^2.2.5",
    "feather-icons": "^3.2.2",
    "fs-extra": "^4.0.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-helmet": "^3.2.0",
    "koa-router": "^7.2.1",
    "koa-slash": "^0.2.0",
    "koa-static": "^4.0.2",
    "koa-views": "^6.1.0",
    "lazysizes": "^4.0.0-rc3",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "node-fetch": "^1.7.3",
    "normalize.css": "^7.0.0",
    "pug": "^2.0.0-rc.3"
  },
  "devDependencies": {
    "async": "^2.5.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "bluebird": "^3.5.1",
    "cssnano": "^3.10.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "exif-reader": "^1.0.2",
    "fetch-cookie": "^0.7.0",
    "glob": "^7.1.2",
    "hashlink": "0.0.1",
    "html-validator": "^2.2.3",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-image-snapshot": "^2.2.0",
    "lint-staged": "^4.3.0",
    "nodemon": "^1.11.0",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "precss": "^2.0.0",
    "progress": "^2.0.0",
    "pug-lint": "^2.5.0",
    "pug-lint-config-clock": "^2.0.0",
    "puppeteer": "^0.13.0",
    "rimraf": "^2.6.1",
    "sharp": "^0.18.2",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-order": "^0.7.0",
    "svgo": "^0.7.2",
    "tough-cookie": "^2.3.3",
    "webpack": "^3.6.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  }
}
