doctype xml
urlset(
    xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
    xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
)
    for page in pages
        url
            loc=origin + page.path
            if page.images
                each image in page.images
                    image:image
                        image:loc=origin + image.src
