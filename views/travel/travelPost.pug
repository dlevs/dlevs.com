extends ../layouts/main

block meta
    title=`${post.town} | Daniel Levett`

block content
    article
        header.site-header
            h1.site-heading=post.town
                span.site-subheading=`${post.country} | ${post.humanDate}`

        each image, i in post.images
            // TODO: Add alt
            a(href=image.srcLarge)
                +picture(image, {className: 'blog-image' + (i === post.images.length - 1 ? ' last' : '')})

        if previousPost || nextPost
            h2.section-heading Other places
            aside.related-posts-wrapper
                if previousPost
                    article.related-post.previous-post
                        a(href=previousPost.href)
                            +picture(previousPost.mainImage, {className: 'related-post-image'})
                            h2.related-post-heading=`Previous: ${previousPost.town}`
                if nextPost
                    article.related-post.next-post
                        a(href=nextPost.href)
                            +picture(nextPost.mainImage, {className: 'related-post-image'})
                            h2.related-post-heading=`Next: ${nextPost.town}`