extends ../layouts/main

block meta
    title=`${post.town} | Daniel Levett`

block content
    article
        header.site-header
            h1.site-heading=post.town
                span.site-subheading=`${post.country} | ${post.humanDate}`

        section
            each image in post.images
                // TODO: Add alt
                +picture(image, {className: 'blog-image'})

        if previousPost || nextPost
            section.next-posts-wrapper
                if previousPost
                    a.next-post.previous(href=previousPost.href)
                        img.next-post-image(src=previousPost.mainImage.src)
                        span=`Previous: ${previousPost.town}`
                if nextPost
                    a.next-post.next(href=nextPost.href)
                        img.next-post-image(src=nextPost.mainImage.src)
                        span=`Next: ${nextPost.town}`