extends ../layouts/main

block meta
    title=`${title} | Daniel Levett`

block content
    header.site-header
        h1.site-heading=title

    section.site-section
        each post in posts
            div
                h2.blog-listing-heading=post.title
                a(href=post.href)
                    +picture(post.mainImage, {className: 'blog-image'})
